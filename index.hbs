<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <title>{{title}}</title>
  <meta name="description" content="">
  <meta name="keywords" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="./css/style.css" rel="stylesheet">
  {{!-- <script src="js/dist/index.js"></script> --}}
  <link href='//fonts.googleapis.com/css?family=Noto+Sans:400,700' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="./font-awesome/css/font-awesome.min.css" type="text/css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.0/css/materialize.min.css">

</head>
<body>
  <header>
  <div class="main">
    <div class="col-md-8">
      <h3><a href="{{website}}">{{title}}</a></h3>
    </div>
    <div class="contact-info">
      <h5>{{contact.title}}</h5>
      <a href="{{contact.facebook}}"><i class="fa fa-facebook-official fa-5"></i></a>
      <a  href="mailto:{{contact.email}}"><i class="fa fa-envelope-o fa-5"></i></a>
    </div>
  </div>
     <nav>
    <div class="nav-wrapper">
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <li><a href="#about">{{about.title}}</a></li>
        <li><a href="#news">{{news.title}}</a></li>
      </ul>
    </div>
    </nav>
    </header>
      <div class="slider">
    <ul class="slides">
        {{#each photos.links}}
        <li>
          <img src="{{link}}"> <!-- random image -->
          <div class="caption center-align">
            <h3>{{tagline}}</h3>
            <h5 class="light grey-text text-lighten-3">{{description}}</h5>
          </div>
        </li>
      {{/each}}
    </ul>
  </div>
    <div class="container">
       <div class="row news">
         <h4 id="news">{{news.title}}</h4>
        <div class="col s12 m6">
          {{#if news.posts}}
            {{#each news.posts}}
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title">{{title}}</span>
              <p>{{content}}</p>
            </div>
          </div>
            {{/each}}
          {{/if}}
        </div>
      </div>
      <div class="row">
        <div class="col s12 m7">
          <div class="card">
            <div class="card-image">
              <img src="{{about.photoLink}}">
              <span class="card-title" id="about">{{about.title}}</span>
            </div>
            <div class="card-content">
              <p>{{about.content}}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
      <footer class="page-footer">
        <div class="container">
          <div class="row">
            <div class="col l6 s12">
              <h5 class="white-text">{{footer.title}}</h5>
              <p class="grey-text text-lighten-4">{{footer.description}}</p>
            </div>
            <div class="col l4 offset-l2 s12">
              <h5 class="white-text">{{relatedLinks.title}}</h5>
              <ul>
                {{#each relatedLinks.links}}
                <li><a class="grey-text text-lighten-3" href="{{url}}">{{title}}</a></li>
                {{/each}}
              </ul>
            </div>
          </div>
        </div>
        <div class="footer-copyright">
          <div class="container">
            Â© 2014 Copyright {{title}}
          </div>
        </div>
      </footer>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.0/js/materialize.min.js"></script>
    <script> 
    $(document).ready(function(){
      $('.slider').slider({full_width: true});
    });               
    </script>
</body>
</html>
